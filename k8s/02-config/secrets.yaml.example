# k8s/02-config/secrets.yaml.example
# QUAN TRỌNG: Copy file này thành secrets.yaml và update các giá trị
# KHÔNG BAO GIỜ commit file secrets.yaml lên git!

apiVersion: v1
kind: Secret
metadata:
  name: hg-chatbot-secrets
  namespace: hg-chatbot
type: Opaque
stringData:
  # Database credentials - THAY ĐỔI TẤT CẢ CÁC GIÁ TRỊ NÀY!
  MONGODB_INITDB_ROOT_USERNAME: "admin"
  MONGODB_INITDB_ROOT_PASSWORD: "CHANGE_ME_STRONG_PASSWORD_123"
  MONGODB_USERNAME: "hgchatbot"
  MONGODB_PASSWORD: "CHANGE_ME_USER_PASSWORD_456"

  POSTGRES_USER: "hgchatbot"
  POSTGRES_PASSWORD: "CHANGE_ME_PG_PASSWORD_789"

  # API Keys - Lấy từ file .env hiện tại của bạn
  OPENAI_API_KEY: "sk-XXXXXXXXXXXXXXXXXXXXX"
  HUGGINGFACE_TOKEN: "hf_XXXXXXXXXXXXXXXXXXXXX"

  # App secrets
  SECRET_KEY: "CHANGE_ME_RANDOM_SECRET_KEY_FOR_JWT"
  ENCRYPTION_KEY: "CHANGE_ME_32_CHAR_ENCRYPTION_KEY"

  # Other API keys nếu có
  # ANTHROPIC_API_KEY: "sk-ant-XXXXXXXXXXXXX"
  # COHERE_API_KEY: "XXXXXXXXXXXXX"
